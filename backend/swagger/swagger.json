{
  "openapi": "3.0.0",
  "info": {
    "title": "Fitness Tracker API",
    "version": "1.0.0",
    "description": "API documentation for Fitness Tracker backend"
  },
  "paths": {
    "/progress": {
      "get": {
        "summary": "Get all progress items",
        "responses": {
          "200": {
            "description": "List of progress items"
          }
        }
      },
      "post": {
        "summary": "Create a new progress item",
        "requestBody": {
          "required": true,
          "content": {
            "application/json": {
              "schema": {
                "type": "object",
                "properties": {
                  "goal": { "type": "string" }
                }
              }
            }
          }
        },
        "responses": {
          "200": { "description": "Progress item created" }
        }
      }
    },
    "/progress/{id}": {
      "put": {
        "summary": "Update progress status",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": { "200": { "description": "Status updated" } }
      },
      "delete": {
        "summary": "Delete progress item",
        "parameters": [
          { "name": "id", "in": "path", "required": true, "schema": { "type": "integer" } }
        ],
        "responses": { "200": { "description": "Deleted successfully" } }
      }
    }
  }
}
