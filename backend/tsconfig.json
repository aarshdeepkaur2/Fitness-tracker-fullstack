{
  "compilerOptions": {
    "target": "ESNext",
    "module": "CommonJS",
    "rootDir": "./src",
    "outDir": "./dist",
    "esModuleInterop": true,
    "strict": true,
    "skipLibCheck": true,

    "typeRoots": [
      "./src/types",
      "./node_modules/@types"
    ]
  },

  "include": ["src"],
  "exclude": ["node_modules"]
}
